@model List<Librery_MVC.Models.BestSellingBooks>
@using Librery_MVC.Models;
@using Librery_MVC.Services;


@{
    Layout = null;
    LibroService libroService = new LibroService();
    int cont = 1;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Libros Mas Vendidos</title>
</head>
<body>
    <div>

        <table class="table table-striped">

            <thead>
                <tr>
                    <th scope="col"></th>
                    <th class="text-center" scope="col">Libro</th>
                    <th class="text-center" scope="col">Total</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Count == 0)
                {                   
                    <tr>
                        <td colspan="3" style="color:red">
                            No se encontraron resultados
                        </td>
                    </tr>
                }
                else
                {
                    foreach (BestSellingBooks item in Model)
                    {
                        String bookName = libroService.getBookName(item.id);

                        <tr>
                            <td>@cont</td>
                            <td>@bookName</td>
                            <td class="text-center">@item.total</td>
                        </tr>

                        cont++;
                    }
                }
            </tbody>

        </table>

    </div>
</body>
</html>
