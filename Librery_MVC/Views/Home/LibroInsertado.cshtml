@model Librery_MVC.Models.Libro
@using Librery_MVC.Models;
@using Librery_MVC.Services;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    LibroService ls = new LibroService();
    int filasAfectadas;
    filasAfectadas = ls.InsertBook(Model);
}

@if (filasAfectadas > 0)
{

    <script type="text/javascript">
        window.alert("El libro se agrego exitosamente!");
        window.location.href = "/Home/Libros";
    </script>
}
else
{
    <script type="text/javascript">
        window.alert("Error no se pudo guardar el libro!");
        window.location.href = "/Home/Libros";
    </script>
}


