
@{
    ViewBag.Title = "userLogin";
    Layout = "~/Views/Shared/_UsserLayout.cshtml";
}

@if (TempData["User"] != null)
 {
     TempData.Remove("User");
 }

<h2 style="color: red">@ViewBag.Msg</h2>


@using (Html.BeginForm("userLogin", "Usser", FormMethod.Post))
{
    <div class="well" id="caja">

        @*<div id="cont-img">
            <img id="img-logo" src="~/principal/imagenes/bookLogo.png" alt="logo">
        </div>*@
        <h3>INICIAR SESIÓN</h3>

        <div id="form-login">

            <div id="cont-inputs">
                <input type="text" id="user" name="user" placeholder="Usuario" required>
                <input type="password" id="password" name="password" placeholder="Contraseña" required>
            </div>

            <div id="wash">
                ¿Olvidaste tu contraseña?
            </div>

            <div id="cont-btns">
                <button type="submit" id="btn-entrar">ENTRAR</button>
                <button type="button" onclick="" id="btn-registrar">@Html.ActionLink("REGISTRARSE", "CrearUsuario", "Usser")</button>
                @*<a id="btn-registrar" href="@Url.Action("CrearUsuario", "Usser")">Registrarse</a>*@
            </div>

        </div>

    </div>

}

