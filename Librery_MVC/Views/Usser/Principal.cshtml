@using Librery_MVC.Models

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_UsserLayout.cshtml";
}

<div class="container">
    <h2>Página principal</h2>
    Bienvenido @ViewBag.User
</div>

<div class="cont-slider">

    <ul class="mySlider">

        <li><img src="~/principal/imagenes/slider-img3.jpg" title="Img1"></li>
        <li><img src="~/principal/imagenes/slider-img3.jpg" title="Img2"></li>
        <li><img src="~/principal/imagenes/slider-img3.jpg" title="Img3"></li>

    </ul>

</div>

<hr />

<div class="galeria">

    <h1>Libros recomendados</h1>

    <div class="linea"></div>

    <div class="contenedor-imagenes">

        @foreach (Libro item in Model)
        {
            <div class="imagen">

                <img src="~/@item.UrlImagen" alt="">

                <div class="overlay">
                    @Html.ActionLink("Mostrar", "MostrarLibro", "Usser", new { idLibro = item.IdLibro }, new { @class = "titulo-imagen" })
                </div>

                <div class="pie-imagen"><span class="glyphicon glyphicon-usd"></span>@item.Precio peso Arg.</div>

            </div>
        }

    </div>

</div>

<div class="linea"></div>

<div class="row" id="fila">

    <div class="col-sm-12 col-md-4" id="cont-boxx">

        <div id="cont-img">
            <img class="img-circle" src="~/principal/imagenes/carrito.jpg" alt="..." />
        </div>

        <div class="caption">
            <h3>Comprar</h3>
            <p>Vea la lista completa de libros y haga su compra!</p>
        </div>

        <a class="btn btn-primary" href="@Url.Action("userListarLibros","Usser")"><span class="glyphicon glyphicon-shopping-cart" id="icono-cart-shopping" aria-hidden="true"></span>Comprar</a>

    </div>

    <div class="col-sm-12 col-md-4" id="cont-boxx">

        <div id="cont-img">
            <img class="img-circle" src="~/principal/imagenes/configurar.png" alt="..." />
        </div>

        <div class="caption">
            <h3>Configurar</h3>
            <p>Actualice sus datos personales</p>
        </div>

        @Html.ActionLink("Configuración", "userListarLibros", "Usser", new { @class = "btn btn-info" })

    </div>

    <div class="col-sm-12 col-md-4" id="cont-boxx">

        <div id="cont-img">
            <img class="img-circle" src="~/principal/imagenes/seguimiento.png" alt="..." />
        </div>

        <div class="caption">
            <h3>Seguimiento</h3>
            <p>Ver mis productos comprados</p>
        </div>

        @Html.ActionLink("Seguimiento", "userListarLibros", "Usser", new { @class = "btn btn-info" })

    </div>

</div>


<script type="text/javascript">

    $(document).ready(function () {

        $('.mySlider').bxSlider({

            //mode: 'fade',
            auto: true,
            captions: true,
            //autoControls: true

        });

    });

</script>





